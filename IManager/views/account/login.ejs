<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">로그인</h3></div>
                                <div class="card-body">
                                    <form action="/account/login" method="POST">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="strID" name="strID" required="" type="text" placeholder="ID" />
                                            <label for="strID">ID</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="strPassword" name="strPassword" placeholder="Password" required="" type="password" />
                                            <label for="strPassword">Password</label>
                                        </div>
                                        <% if ( messages ) { %>
                                            <p style="color:red;"><%= messages %></p>
                                            <% } %>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button class="btn btn-primary ml-auto" type="submit" id="LoginButton"> Login </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Pokers 2023</div>
